---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const products = await getCollection('cad-products');
  return products.map((product) => ({
    params: { slug: product.data.slug },
    props: { product },
  }));
}

const { product } = Astro.props;
const { Content } = await render(product);

// Get related blog posts
const allBlog = await getCollection('cad-blog');
const relatedPosts = allBlog.filter((post) =>
  product.data.relatedBlogSlugs.includes(post.data.slug)
);
---

<BaseLayout title={product.data.title} description={product.data.description}>
  <article class="product-page">
    <a href="/cherry-arbor-design" class="back-link">&larr; Cherry Arbor Design</a>

    <div class="product-layout">
      <div class="product-images">
        {product.data.images.length > 0 ? (
          product.data.images.map((img, i: number) => (
            <Image src={img} alt={`${product.data.title} - image ${i + 1}`} loading={i === 0 ? 'eager' : 'lazy'} width={480} />
          ))
        ) : (
          <div class="no-image">No image available</div>
        )}
      </div>

      <div class="product-details">
        <h1>{product.data.title}</h1>

        <div class="price-block">
          <span class="price">{product.data.priceRange || `$${product.data.price}`}</span>
          {product.data.soldOut && <span class="sold-out">Sold Out</span>}
        </div>

        {product.data.options.length > 0 && (
          <div class="options">
            {product.data.options.map((option: { name: string; values: string[] }) => (
              <div class="option-group">
                <span class="option-label">{option.name}:</span>
                <span class="option-values">{option.values.join(', ')}</span>
              </div>
            ))}
          </div>
        )}

        <div class="description">
          <Content />
        </div>

        <p class="archive-note">
          This product is from the Cherry Arbor Design archive. The store is no longer active.
        </p>
      </div>
    </div>

    {relatedPosts.length > 0 && (
      <section class="related">
        <h2>Related Articles</h2>
        <div class="related-grid">
          {relatedPosts.map((post) => (
            <a href={`/cherry-arbor-design/blog/${post.data.slug}`} class="related-card">
              <h3>{post.data.title}</h3>
            </a>
          ))}
        </div>
      </section>
    )}
  </article>
</BaseLayout>

<style>
  .product-page {
    max-width: 960px;
    margin: 0 auto;
  }

  .back-link {
    display: inline-block;
    color: var(--ink-tertiary);
    text-decoration: none;
    font-size: 0.85rem;
    margin-bottom: var(--space-6);
  }

  .back-link:hover {
    color: var(--grid-teal);
  }

  .product-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-8);
    margin-bottom: var(--space-8);
  }

  .product-images img {
    width: 100%;
    border-radius: var(--radius-md);
    border: 1px solid var(--rule);
    display: block;
    margin-bottom: var(--space-3);
  }

  .no-image {
    aspect-ratio: 1;
    background: var(--paper-inset);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--ink-muted);
    font-size: 0.85rem;
  }

  h1 {
    margin-bottom: var(--space-3);
  }

  .price-block {
    display: none;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
  }

  .price {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--ink);
  }

  .sold-out {
    font-size: 0.8rem;
    color: var(--mark-error);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }

  .options {
    margin-bottom: var(--space-4);
    padding: var(--space-3);
    background: var(--paper-inset);
    border-radius: var(--radius-sm);
  }

  .option-group {
    margin-bottom: var(--space-1);
  }

  .option-label {
    font-weight: 500;
    color: var(--ink-secondary);
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }

  .option-values {
    color: var(--ink);
    font-size: 0.9rem;
  }

  .description {
    line-height: 1.65;
    color: var(--ink);
    margin-bottom: var(--space-6);
  }

  .archive-note {
    font-size: 0.8rem;
    color: var(--ink-tertiary);
    padding: var(--space-3);
    border-left: 2px solid var(--rule-emphasis);
    font-style: italic;
  }

  .related {
    border-top: 1px solid var(--rule);
    padding-top: var(--space-6);
  }

  .related h2 {
    margin-bottom: var(--space-4);
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: var(--space-3);
  }

  .related-card {
    display: block;
    padding: var(--space-3);
    border: 1px solid var(--rule);
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: border-color 0.15s ease;
  }

  .related-card:hover {
    border-color: var(--rule-emphasis);
  }

  .related-card h3 {
    color: var(--ink);
    margin: 0;
    font-size: 0.95rem;
  }

  @media (max-width: 768px) {
    .product-layout {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }
  }
</style>
